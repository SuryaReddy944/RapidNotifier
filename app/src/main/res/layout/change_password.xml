<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backbutton"
            android:src="@drawable/btn_back"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp" />
        <TextView
            android:text="Change password"
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/title"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Current password"
                    android:textSize="14dp"
                    android:id="@+id/lblcurrentpass"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editTextcurrentpass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_shape"

                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:hint="current password "
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="@color/block"
                    android:textColorHint="@color/grey" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:focusableInTouchMode="true"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="New password"
                    android:textSize="14dp"
                    android:id="@+id/lblnewpass"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editTextnewpass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_shape"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:hint="New password "
                    android:maxLength="10"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="@color/block"
                    android:textColorHint="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:focusableInTouchMode="true"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Confirm password"
                    android:textSize="14dp"
                    android:id="@+id/lblconfirmpass"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editTextconfirmpass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_shape"

                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:hint="Confirm password "
                    android:maxLength="10"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="@color/block"
                    android:textColorHint="@color/grey" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonsave"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:background="@color/grey"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>