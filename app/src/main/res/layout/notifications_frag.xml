<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/llalaram"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginRight="1dp"
            android:background="@drawable/tab_selected"
            android:gravity="center">

            <TextView
                android:id="@+id/lblalaram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alaram"
                android:textAllCaps="true"
                android:textColor="@color/block" />

            <TextView
                android:id="@+id/lblalaramcount"
                android:layout_width="20dp"
                android:text="6"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/alaram_count"
                android:layout_height="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llevents"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@drawable/non_selected_tab"
            android:gravity="center">

            <TextView
                android:id="@+id/lbevents"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:text="Events" />
            <TextView
                android:id="@+id/lbleventscount"
                android:layout_width="20dp"
                android:text="6"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/non_selected_count"
                android:layout_height="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llfilter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/non_selected_tab"
            android:gravity="center">

            <TextView
                android:id="@+id/lblfilter"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:text="Filter" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/grey"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:text="laskdjasldjkdlask"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>